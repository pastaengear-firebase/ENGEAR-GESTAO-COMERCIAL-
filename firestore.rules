
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // User profile is publicly readable, but only the user can write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Sales can be read by any authenticated user, but only modified by the user who created them.
    match /sales/{saleId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.sellerUid;
      allow update: if request.auth.uid == resource.data.sellerUid
                    && request.resource.data.sellerUid == resource.data.sellerUid; // Prevent changing owner
      allow delete: if request.auth.uid == resource.data.sellerUid;
    }

    // Quotes can be read by any authenticated user, but only modified by the user who created them.
    match /quotes/{quoteId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.sellerUid;
      allow update: if request.auth.uid == resource.data.sellerUid
                    && request.resource.data.sellerUid == resource.data.sellerUid; // Prevent changing owner
      allow delete: if request.auth.uid == resource.data.sellerUid;
    }

    // WARNING: Settings can be read and written by ANY authenticated user.
    // For production, you should restrict write access to a specific admin UID.
    // e.g., allow write: if request.auth.uid == 'YOUR_ADMIN_UID';
    match /settings/{docId} {
       allow read, write: if request.auth != null;
    }
  }
}
