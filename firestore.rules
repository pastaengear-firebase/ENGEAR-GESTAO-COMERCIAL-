
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Only authenticated users can access the database
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // User profile is publicly readable, but only the user can write to their own document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Sales, Quotes, and Settings can be read and written by any authenticated user.
    // You may want to restrict this further based on user roles or ownership.
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }

    match /quotes/{quoteId} {
      allow read, write: if request.auth != null;
    }

    match /settings/{docId} {
       allow read, write: if request.auth != null;
    }
  }
}
